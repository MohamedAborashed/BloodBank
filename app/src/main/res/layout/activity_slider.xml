<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    tools:context=".ui.activity.SliderActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/Slider_Activity_Vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/Slider_Activity_Btn_Skip"
        android:layout_marginStart="@dimen/dim_m"
        android:layout_marginEnd="@dimen/dim_m">

    </androidx.viewpager.widget.ViewPager>

    <Button
        android:id="@+id/Slider_Activity_Btn_Skip"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_4xl"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dim_m"
        android:text="@string/skip"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_size_l"
        android:textStyle="bold" />


</RelativeLayout>